/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "alwaysStrict": true,
    "rootDir": "src",
    "baseUrl": ".",
    "target": "ES2018",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src",
    "bin"
  ],
  "exclude": ["node_modules", "lib", "rollup.config.mjs"]
}